<SettingsExpander
    x:Class="HyperX.WiFi.Avalonia.ConnectionPasswordView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Header="Password">
    <SettingsExpander.Resources>
        <ResourceDictionary>
            <x:Double x:Key="SettingsExpanderItemAdaptiveWidthTrigger">1920</x:Double>
            <Thickness x:Key="SettingsExpanderItemBottomFooterMargin">0,8,0,0</Thickness>
        </ResourceDictionary>
    </SettingsExpander.Resources>
    <SettingsExpander.Footer>
        <TextBox Watermark="Enter password">
            <Interaction.Behaviors>
                <EventTriggerBehavior EventName="GotFocus">
                    <NavigateAction
                        Name="Keyboard"
                        Context="Root"
                        Scope="KeyboardComponent" />
                </EventTriggerBehavior>
            </Interaction.Behaviors>
        </TextBox>
    </SettingsExpander.Footer>
</SettingsExpander>
