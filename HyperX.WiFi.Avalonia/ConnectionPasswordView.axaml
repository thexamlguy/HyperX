<SettingsExpander
    x:Class="HyperX.WiFi.Avalonia.ConnectionPasswordView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    Header="Password">
    <SettingsExpander.Resources>
        <ResourceDictionary>
            <Thickness x:Key="SettingsExpanderItemBottomFooterMargin">0, 16, 0, 0</Thickness>
        </ResourceDictionary>
    </SettingsExpander.Resources>
    <SettingsExpander.Styles>
        <Style Selector="ui|SettingsExpanderItem">
            <Style Selector="^:footerBottom /template/ ContentPresenter#FooterPresenter">
                <Setter Property="HorizontalAlignment" Value="Stretch" />
            </Style>
        </Style>
    </SettingsExpander.Styles>
    <SettingsExpander.Footer>
        <TextBox Watermark="Enter password">
            <Interaction.Behaviors>
                <EventTriggerBehavior EventName="Tapped">
                    <NavigateAction
                        Name="Keyboard"
                        Context="Root"
                        Scope="KeyboardComponent" />
                </EventTriggerBehavior>
            </Interaction.Behaviors>
        </TextBox>
    </SettingsExpander.Footer>
</SettingsExpander>
