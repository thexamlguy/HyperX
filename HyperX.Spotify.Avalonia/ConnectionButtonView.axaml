<UserControl
    x:Class="HyperX.Spotify.Avalonia.ConnectionButtonView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Button MinWidth="132" Content="Connect">
        <Interaction.Behaviors>
            <EventTriggerBehavior EventName="Click">
                <NavigateAction Name="AddConnection" Scope="SpotifyComponent" />
            </EventTriggerBehavior>
        </Interaction.Behaviors>
    </Button>
</UserControl>
