<UserControl
    x:Class="HyperX.DateTime.Avalonia.DateTimeView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Margin="4,0,0,-8" Text="{Binding Value, StringFormat='ddd, dd MMM'}" />
        <TextBlock Text="{Binding Value, StringFormat='HH:mm'}" Theme="{DynamicResource TitleLargeTextBlockStyle}" />
    </StackPanel>
</UserControl>
