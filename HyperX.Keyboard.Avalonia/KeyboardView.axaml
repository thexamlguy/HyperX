<UserControl
    x:Class="HyperX.Keyboard.Avalonia.KeyboardView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="24" RowDefinitions="Auto, Auto, *">
        <TextBox
            Grid.Row="0"
            CaretIndex="{Binding Position}"
            IsReadOnly="True"
            Text="{Binding Text}" />
        <ItemsControl
            Grid.Row="1"
            HorizontalAlignment="Center"
            ItemTemplate="{Binding Template}"
            ItemsSource="{Binding}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
        <Frame x:Name="KeyboardLayout" Grid.Row="2">
            <Interaction.Behaviors>
                <EventTriggerBehavior EventName="Loaded">
                    <NavigateAction
                        Name="LowerAlphabeticalKeyboardLayout"
                        Context="KeyboardLayout"
                        Scope="KeyboardComponent" />                
                </EventTriggerBehavior>
            </Interaction.Behaviors>
        </Frame>
    </Grid>
</UserControl>
