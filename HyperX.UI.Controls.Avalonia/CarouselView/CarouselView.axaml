<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:HyperX.UI.Controls.Avalonia">
    <Design.PreviewWith>
        <Border Padding="20" />
    </Design.PreviewWith>
    <ControlTheme x:Key="{x:Type controls:CarouselView}" TargetType="controls:CarouselView">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <ControlTemplate>
                <Grid
                    x:Name="Container"
                    VerticalAlignment="Stretch"
                    Background="{TemplateBinding Background}">
                    <Rectangle
                        x:Name="Indicator"
                        Width="10"
                        Height="10"
                        VerticalAlignment="Top" />
                    <ContentControl HorizontalAlignment="Left" Background="Red" />
                    <ContentControl HorizontalAlignment="Left" Background="Blue" />
                    <ContentControl HorizontalAlignment="Left" Background="Purple" />
                    <ContentControl HorizontalAlignment="Left" Background="Green" />
                    <ContentControl HorizontalAlignment="Left" Background="Yellow" />
                </Grid>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>
