<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:HyperX.UI.Controls.Avalonia">
    <Design.PreviewWith>
        <Border Padding="20" />
    </Design.PreviewWith>
    <ControlTheme x:Key="{x:Type controls:CarouselView}" TargetType="controls:CarouselView">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <ControlTemplate>
                <Grid
                    x:Name="Container"
                    VerticalAlignment="Stretch"
                    Background="{TemplateBinding Background}">
                    <Border HorizontalAlignment="Left" Background="Red">
                        <ContentControl />
                    </Border>
                    <Border HorizontalAlignment="Left" Background="Blue">
                        <ContentControl />
                    </Border>
                    <Border HorizontalAlignment="Left" Background="Purple">
                        <ContentControl />
                    </Border>
                    <Border HorizontalAlignment="Left" Background="Green">
                        <ContentControl />
                    </Border>
                    <Border HorizontalAlignment="Left" Background="Yellow">
                        <ContentControl />
                    </Border>
                    <Rectangle
                        x:Name="Indicator"
                        Width="10"
                        Height="10"
                        VerticalAlignment="Top"
                        Fill="Pink" />
                </Grid>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>
